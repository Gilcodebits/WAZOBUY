{% extends 'base.html.twig' %}

{% block title %}Mon profil - Livreur | WAZOBUY{% endblock %}

{% block body %}
    <div class="container">
        <div class="profile-header">
            <h1>Mon profil</h1>
            <a href="{{ path('app_delivery_dashboard') }}" class="btn btn-secondary">Retour au tableau de bord</a>
        </div>

        <div class="profile-content">
            <div class="profile-info">
                <div class="profile-image">
                    <img src="{{ asset('images/default-avatar.png') }}" alt="Photo de profil">
                </div>
                <div class="profile-details">
                    <h2>Nom du livreur</h2>
                    <p class="profile-email">email@example.com</p>
                    <p class="profile-phone">+229 XX XX XX XX</p>
                </div>
            </div>

            <div class="profile-sections">
                <div class="section">
                    <h3>Informations personnelles</h3>
                    <form class="profile-form">
                        <div class="form-group">
                            <label for="name">Nom complet</label>
                            <input type="text" id="name" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="phone">Téléphone</label>
                            <input type="tel" id="phone" name="phone" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Mettre à jour</button>
                    </form>
                </div>

                <div class="section">
                    <h3>Paramètres de livraison</h3>
                    <form class="delivery-settings">
                        <div class="form-group">
                            <label for="vehicle">Véhicule</label>
                            <select id="vehicle" name="vehicle">
                                <option value="moto">Moto</option>
                                <option value="voiture">Voiture</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="zones">Zones de livraison</label>
                            <select id="zones" name="zones" multiple>
                                <option value="zone1">Zone 1</option>
                                <option value="zone2">Zone 2</option>
                                <option value="zone3">Zone 3</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/delivery.css') }}">
{% endblock %}
