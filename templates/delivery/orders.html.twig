{% extends 'base.html.twig' %}

{% block title %}Mes livraisons | WAZOBUY{% endblock %}

{% block body %}
    <div class="container">
        <div class="orders-header">
            <h1>Mes livraisons</h1>
            <div class="orders-filters">
                <select class="status-filter">
                    <option value="all">Tous les statuts</option>
                    <option value="pending">En attente</option>
                    <option value="in-progress">En cours</option>
                    <option value="completed">Terminées</option>
                </select>
                <input type="date" class="date-filter">
            </div>
        </div>

        <div class="orders-list">
            <div class="order-card">
                <div class="order-header">
                    <div class="order-info">
                        <h3>Commande #12345</h3>
                        <p class="order-date">18 Juin 2025</p>
                    </div>
                    <div class="order-status status-pending">
                        <span>En attente</span>
                    </div>
                </div>
                <div class="order-details">
                    <div class="order-items">
                        <div class="item">
                            <img src="{{ asset('images/default-product.png') }}" alt="Produit">
                            <div class="item-info">
                                <h4>Produit 1</h4>
                                <p class="item-quantity">2x</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="{{ asset('images/default-product.png') }}" alt="Produit">
                            <div class="item-info">
                                <h4>Produit 2</h4>
                                <p class="item-quantity">1x</p>
                            </div>
                        </div>
                    </div>
                    <div class="order-actions">
                        <button class="btn btn-primary">Accepter</button>
                        <button class="btn btn-danger">Refuser</button>
                    </div>
                </div>
            </div>

            <div class="order-card">
                <div class="order-header">
                    <div class="order-info">
                        <h3>Commande #67890</h3>
                        <p class="order-date">17 Juin 2025</p>
                    </div>
                    <div class="order-status status-in-progress">
                        <span>En cours</span>
                    </div>
                </div>
                <div class="order-details">
                    <div class="order-items">
                        <div class="item">
                            <img src="{{ asset('images/default-product.png') }}" alt="Produit">
                            <div class="item-info">
                                <h4>Produit 3</h4>
                                <p class="item-quantity">3x</p>
                            </div>
                        </div>
                    </div>
                    <div class="order-actions">
                        <button class="btn btn-success">Livré</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/delivery.css') }}">
{% endblock %}
