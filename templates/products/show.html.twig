{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }} - Détails du produit{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #667eea;
            --secondary-color: #764ba2;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --info-color: #17a2b8;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
            --border-radius: 12px;
            --box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
        }

        .breadcrumb {
            background: white;
            border-radius: var(--border-radius);
            padding: 1rem 2rem;
            margin-bottom: 2rem;
            box-shadow: var(--box-shadow);
        }

        .breadcrumb a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
        }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

        .product-details {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            overflow: hidden;
        }

        .product-header {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            padding: 2rem;
        }

        .product-image {
            text-align: center;
        }

        .product-image img {
            max-width: 100%;
            max-height: 400px;
            border-radius: var(--border-radius);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .product-info {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .product-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
        }

        .product-category {
            color: var(--primary-color);
            font-weight: 600;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .product-price {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin: 1rem 0;
        }

        .price-current {
            font-size: 2rem;
            font-weight: 700;
            color: var(--dark-color);
        }

        .price-original {
            font-size: 1.2rem;
            color: #6c757d;
            text-decoration: line-through;
        }

        .price-discount {
            background: var(--danger-color);
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .product-description {
            color: #6c757d;
            line-height: 1.6;
            font-size: 1.1rem;
        }

        .product-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 1rem;
            margin: 1.5rem 0;
        }

        .stat-item {
            text-align: center;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .stat-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--dark-color);
        }

        .stat-label {
            font-size: 0.9rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }

        .product-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: var(--transition);
            cursor: pointer;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102,126,234,0.15);
        }

        .btn-secondary {
            background: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

        .product-details-section {
            padding: 2rem;
            border-top: 1px solid #e3e6f0;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 1rem;
        }

        .seller-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .seller-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
        }

        .seller-details h4 {
            margin: 0;
            color: var(--dark-color);
        }

        .seller-details p {
            margin: 0;
            color: #6c757d;
            font-size: 0.9rem;
        }

        .stock-status {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            font-weight: 600;
        }

        .stock-status.in-stock {
            background: #d4edda;
            color: #155724;
        }

        .stock-status.low-stock {
            background: #fff3cd;
            color: #856404;
        }

        .stock-status.out-of-stock {
            background: #f8d7da;
            color: #721c24;
        }

        @media (max-width: 768px) {
            .container {
                padding: 1rem;
                margin: 1rem auto;
            }
            
            .product-header {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
            
            .product-actions {
                flex-direction: column;
            }
            
            .product-stats {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="breadcrumb">
        <a href="{{ path('app_home') }}">Accueil</a> > 
        <a href="{{ path('products') }}">Produits</a> > 
        <span>{{ produit.nom }}</span>
    </div>

    <div class="product-details">
        <div class="product-header">
            <div class="product-image">
                <img src="{% if produit.image and image_exists('uploads/products/' ~ produit.image) %}{{ asset('uploads/products/' ~ produit.image) }}{% else %}{{ asset('images/product-placeholder.jpg') }}{% endif %}" 
                     alt="{{ produit.nom }}">
            </div>
            
            <div class="product-info">
                <div class="product-category">{{ produit.categorie }}</div>
                <h1 class="product-title">{{ produit.nom }}</h1>
                
                <div class="product-price">
                    {% if produit.enPromotion and produit.pourcentagePromotion %}
                        <span class="price-current">{{ format_price(produit.prix)|raw }}</span>
                        <span class="price-original">{{ format_price(produit.prix + (produit.prix * produit.pourcentagePromotion / 100))|raw }}</span>
                        <span class="price-discount">-{{ produit.pourcentagePromotion }}%</span>
                    {% else %}
                        <span class="price-current">{{ format_price(produit.prix)|raw }}</span>
                    {% endif %}
                </div>
                
                <div class="stock-status 
                    {% if produit.stock == 0 %}out-of-stock
                    {% elseif produit.stock <= 5 %}low-stock
                    {% else %}in-stock{% endif %}">
                    <i class="fas fa-box"></i>
                    {% if produit.stock == 0 %}
                        Rupture de stock
                    {% elseif produit.stock <= 5 %}
                        Plus que {{ produit.stock }} en stock
                    {% else %}
                        {{ produit.stock }} en stock
                    {% endif %}
                </div>
                
                <p class="product-description">{{ produit.description }}</p>
                
                <div class="product-stats">
                    <div class="stat-item">
                        <div class="stat-value">{{ produit.note|number_format(1) }}</div>
                        <div class="stat-label">Note</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">{{ produit.nombreAvis }}</div>
                        <div class="stat-label">Avis</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">{{ produit.stock }}</div>
                        <div class="stat-label">Stock</div>
                    </div>
                </div>
                
                <div class="product-actions">
                    <button class="btn btn-primary">
                        <i class="fas fa-shopping-cart"></i>
                        Ajouter au panier
                    </button>
                    <a href="{{ path('app_seller_products') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Retour
                    </a>
                </div>
            </div>
        </div>
        
        <div class="product-details-section">
            <h3 class="section-title">Informations vendeur</h3>
            <div class="seller-info">
                <div class="seller-avatar">
                    {{ produit.vendeur.prenom|first|upper }}{{ produit.vendeur.nom|first|upper }}
                </div>
                <div class="seller-details">
                    <h4>{{ produit.vendeur.prenom }} {{ produit.vendeur.nom }}</h4>
                    <p>Vendeur vérifié</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 