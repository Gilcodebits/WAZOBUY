    <script id="form-navigation">
        document.addEventListener('DOMContentLoaded', function() {
            const sections = document.querySelectorAll('.form-section');
            const nextButtons = document.querySelectorAll('.next-btn');
            const prevButtons = document.querySelectorAll('.prev-btn');
            const progressBar = document.querySelector('.progress-bar-fill');
            const progressText = document.getElementById('progress-text');
            const progressPercentage = document.getElementById('progress-percentage');
            const stepIndicators = document.querySelectorAll('.step-indicator');
            let currentSection = 0;

            // Next button click handler
            nextButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Validate current section
                    if (validateSection(currentSection)) {
                        sections[currentSection].classList.remove('active');
                        currentSection++;
                        sections[currentSection].classList.add('active');
                        updateProgress();
                    }
                });
            });

            // Previous button click handler
            prevButtons.forEach(button => {
                button.addEventListener('click', function() {
                    sections[currentSection].classList.remove('active');
                    currentSection--;
                    sections[currentSection].classList.add('active');
                    updateProgress();
                });
            });

            // Update progress indicators
            function updateProgress() {
                const progress = ((currentSection + 1) / sections.length) * 100;
                progressBar.style.width = `${progress}%`;
                progressText.textContent = `Étape ${currentSection + 1} sur ${sections.length}`;
                progressPercentage.textContent = Math.round(progress);
                
                // Update step indicators
                stepIndicators.forEach((indicator, index) => {
                    if (index <= currentSection) {
                        indicator.classList.add('bg-secondary');
                        indicator.classList.add('text-white');
                        indicator.classList.remove('bg-gray-200');
                        indicator.classList.remove('text-gray-500');
                    } else {
                        indicator.classList.remove('bg-secondary');
                        indicator.classList.remove('text-white');
                        indicator.classList.add('bg-gray-200');
                        indicator.classList.add('text-gray-500');
                    }
                });
            }

            // Basic validation for each section
            function validateSection(sectionIndex) {
                const section = sections[sectionIndex];
                const requiredFields = section.querySelectorAll('[required]');
                let valid = true;

                requiredFields.forEach(field => {
                    if (!field.value) {
                        field.classList.add('border-red-500');
                        valid = false;
                    } else {
                        field.classList.remove('border-red-500');
                    }
                });

                // Special validation for section 3 (vehicle type)
                if (sectionIndex === 2) {
                    const vehicleType = document.getElementById('vehicle-type');
                    if (!vehicleType.value) {
                        document.querySelectorAll('.vehicle-option').forEach(option => {
                            option.classList.add('border-red-500');
                        });
                        valid = false;
                    }
                }

                return valid;
            }

            // Form submission
            const form = document.getElementById('delivery-application-form');
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Final validation
                if (validateSection(currentSection)) {
                    // Show success message (in a real application, you would submit the form data to a server)
                    const formContainer = form.parentElement;
                    formContainer.innerHTML = `
                        <div class="text-center py-8">
                            <div class="w-20 h-20 mx-auto bg-green-100 rounded-full flex items-center justify-center mb-4">
                                <i class="ri-check-line ri-2x text-green-500"></i>
                            </div>
                            <h2 class="text-2xl font-bold text-primary mb-2">Candidature soumise avec succès !</h2>
                            <p class="text-gray-600 mb-6">Merci pour votre intérêt à rejoindre l'équipe de livreurs WAZOBUY. Nous examinerons votre candidature et vous contacterons dans les 48 à 72 heures ouvrables.</p>
                            <p class="text-gray-600 mb-6">Un email de confirmation a été envoyé à l'adresse que vous avez fournie.</p>
                            <a href="#" class="inline-block bg-primary hover:bg-opacity-90 text-white py-2 px-6 rounded-button whitespace-nowrap">Retour à l'accueil</a>
                        </div>
                    `;
                }
            });
        });
    </script>

    <script id="file-upload-handlers">
        document.addEventListener('DOMContentLoaded', function() {
            const fileContainers = document.querySelectorAll('.file-upload-container');
            
            fileContainers.forEach(container => {
                const inputId = container.dataset.input;
                const fileInput = document.getElementById(inputId);
                const browseBtn = container.querySelector('.browse-btn');
                const fileInfo = container.querySelector('.file-info');
                const fileName = container.querySelector('.file-name');
                const progressFill = container.querySelector('.progress-bar-fill');
                
                // Open file dialog when browse button is clicked
                browseBtn.addEventListener('click', () => {
                    fileInput.click();
                });
                
                // Handle file selection
                fileInput.addEventListener('change', () => {
                    if (fileInput.files.length > 0) {
                        const file = fileInput.files[0];
                        fileName.textContent = file.name;
                        fileInfo.classList.remove('hidden');
                        
                        // Simulate upload progress
                        let progress = 0;
                        const interval = setInterval(() => {
                            progress += 10;
                            progressFill.style.width = `${progress}%`;
                            
                            if (progress >= 100) {
                                clearInterval(interval);
                                container.classList.add('border-green-500');
                                container.classList.remove('border-gray-300');
                            }
                        }, 200);
                    }
                });
                
                // Handle drag and drop
                container.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    container.classList.add('dragging');
                });
                
                container.addEventListener('dragleave', () => {
                    container.classList.remove('dragging');
                });
                
                container.addEventListener('drop', (e) => {
                    e.preventDefault();
                    container.classList.remove('dragging');
                    
                    if (e.dataTransfer.files.length > 0) {
                        fileInput.files = e.dataTransfer.files;
                        const file = e.dataTransfer.files[0];
                        fileName.textContent = file.name;
                        fileInfo.classList.remove('hidden');
                        
                        // Simulate upload progress
                        let progress = 0;
                        const interval = setInterval(() => {
                            progress += 10;
                            progressFill.style.width = `${progress}%`;
                            
                            if (progress >= 100) {
                                clearInterval(interval);
                                container.classList.add('border-green-500');
                                container.classList.remove('border-gray-300');
                            }
                        }, 200);
                    }
                });
            });
        });
    </script>

    <script id="vehicle-selection">
        document.addEventListener('DOMContentLoaded', function() {
            const vehicleOptions = document.querySelectorAll('.vehicle-option');
            const vehicleTypeInput = document.getElementById('vehicle-type');
            
            vehicleOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Remove selection from all options
                    vehicleOptions.forEach(opt => {
                        opt.classList.remove('border-secondary');
                        opt.classList.add('border-gray-300');
                        const radioDot = opt.querySelector('.radio-dot');
                        radioDot.classList.add('hidden');
                        const radioCircle = opt.querySelector('.radio-circle');
                        radioCircle.classList.remove('border-secondary');
                        radioCircle.classList.add('border-gray-300');
                    });
                    
                    // Add selection to clicked option
                    this.classList.add('border-secondary');
                    this.classList.remove('border-gray-300');
                    const radioDot = this.querySelector('.radio-dot');
                    radioDot.classList.remove('hidden');
                    const radioCircle = this.querySelector('.radio-circle');
                    radioCircle.classList.add('border-secondary');
                    radioCircle.classList.remove('border-gray-300');
                    
                    // Update hidden input
                    vehicleTypeInput.value = this.dataset.value;
                    
                    // Remove validation error styling
                    vehicleOptions.forEach(opt => {
                        opt.classList.remove('border-red-500');
                    });
                });
            });
        });
    </script>

    <script id="availability-toggles">
        document.addEventListener('DOMContentLoaded', function() {
            const availabilityToggles = document.querySelectorAll('input[name="availability[]"]');
            
            availabilityToggles.forEach(toggle => {
                toggle.addEventListener('change', function() {
                    const day = this.value;
                    const fromInput = document.querySelector(`input[name="${day}-from"]`);
                    const toInput = document.querySelector(`input[name="${day}-to"]`);
                    
                    if (this.checked) {
                        fromInput.disabled = false;
                        toInput.disabled = false;
                        fromInput.required = true;
                        toInput.required = true;
                    } else {
                        fromInput.disabled = true;
                        toInput.disabled = true;
                        fromInput.required = false;
                        toInput.required = false;
                        fromInput.value = '';
                        toInput.value = '';
                    }
                });
            });
        });
    </script>

    <script id="faq-toggles">
        document.addEventListener('DOMContentLoaded', function() {
            const faqToggles = document.querySelectorAll('.faq-toggle');
            
            faqToggles.forEach(toggle => {
                toggle.addEventListener('click', function() {
                    const content = this.nextElementSibling;
                    const icon = this.querySelector('i');
                    
                    // Toggle content visibility
                    content.classList.toggle('hidden');
                    
                    // Rotate icon
                    if (content.classList.contains('hidden')) {
                        icon.style.transform = 'rotate(0deg)';
                    } else {
                        icon.style.transform = 'rotate(180deg)';
                    }
                });
            });
        });
    </script>
