{% extends 'base.html.twig' %}

{% block title %}Mes commandes - WAZOBUY{% endblock %}

{% block body %}
    <div class="orders-container">
        <h1>Mes commandes</h1>

        {% if commandes|length > 0 %}
            <div class="orders-list">
                {% for commande in commandes %}
                    <div class="order-card">
                        <div class="order-header">
                            <h3>Commande #{{ commande.id }}</h3>
                            <span class="order-date">{{ commande.dateCommande|date('d/m/Y H:i') }}</span>
                        </div>

                        <div class="order-details">
                            <div class="order-status">
                                <span class="status-badge {{ commande.statut }}">
                                    {{ commande.statut|upper }}
                                </span>
                            </div>

                            <div class="order-items">
                                <h4>Articles</h4>
                                <ul>
                                    {% for item in commande.items %}
                                        <li>
                                            <span class="item-name">{{ item.produit.nom }}</span>
                                            <span class="item-quantity">x{{ item.quantite }}</span>
                                            <span class="item-price">{{ item.prix|number_format(2, ',', ' ') }} €</span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>

                            <div class="order-total">
                                <span class="total-label">Total :</span>
                                <span class="total-amount">{{ commande.total|number_format(2, ',', ' ') }} €</span>
                            </div>

                            <div class="order-actions">
                                <a href="{{ path('app_commande_details', { 'id': commande.id }) }}" class="details-btn">
                                    Détails
                                </a>
                                {% if commande.statut == 'en_attente' %}
                                    <a href="{{ path('app_commande_annuler', { 'id': commande.id }) }}" class="cancel-btn">
                                        Annuler
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="no-orders">
                <p>Aucune commande pour le moment</p>
                <a href="{{ path('app_home') }}" class="shop-now-btn">Faire un achat</a>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/orders.css') }}">
{% endblock %}
