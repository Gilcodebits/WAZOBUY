{% block javascripts %}
    {{ parent() }}
    <script>
        // Filter modal functionality
        function showFilterModal() {
            document.getElementById('filterModal').classList.add('show');
        }

        function hideFilterModal() {
            document.getElementById('filterModal').classList.remove('show');
        }

        // Sort functionality
        function changeSort(value) {
            const url = new URL(window.location);
            url.searchParams.set('sort', value);
            window.location.href = url.toString();
        }

        // Filter functionality
        function applyFilters() {
            const selectedPrices = [];
            const selectedRatings = [];

            document.querySelectorAll('.filter-option.active[data-price]').forEach(option => {
                selectedPrices.push(option.dataset.price);
            });

            document.querySelectorAll('.filter-option.active[data-rating]').forEach(option => {
                selectedRatings.push(option.dataset.rating);
            });

            const url = new URL(window.location);
            
            if (selectedPrices.length > 0) {
                selectedPrices.forEach(price => {
                    url.searchParams.append('prix[]', price);
                });
            }
            
            if (selectedRatings.length > 0) {
                url.searchParams.set('note', Math.max(...selectedRatings));
            }

            window.location.href = url.toString();
        }

        // Filter option selection
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.filter-option').forEach(option => {
                option.addEventListener('click', function() {
                    this.classList.toggle('active');
                });
            });

            // Product card interactions
            document.querySelectorAll('.product-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    if (!e.target.classList.contains('favorite-btn')) {
                        // Navigate to product detail page
                        console.log('Navigate to product detail');
                    }
                });
            });

            // Favorite button functionality
            document.querySelectorAll('.favorite-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    this.innerHTML = this.innerHTML === '‚ô°' ? '‚ô•' : '‚ô°';
                    this.style.color = this.innerHTML === '‚ô•' ? '#ff6b6b' : '';
                });
            });
        });

        // Close modal when clicking outside
        document.getElementById('filterModal').addEventListener('click', function(e) {
            if (e.target === this) {
                hideFilterModal();
            }
        });
    </script>
{% endblock %} 