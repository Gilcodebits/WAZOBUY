{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/styles/register.css') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function togglePassword(button) {
            const input = button.parentElement.querySelector('input');
            const eyeIcon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                eyeIcon.className = 'fas fa-eye-slash';
            } else {
                input.type = 'password';
                eyeIcon.className = 'fas fa-eye';
            }
        }

        // Fonction pour vérifier si le formulaire est valide
        function checkFormValidity() {
            // Vérifier les champs requis
            const requiredFields = [
                document.getElementById('registration_prenom'),
                document.getElementById('registration_nom'),
                document.getElementById('registration_email'),
                document.getElementById('password'),
                document.getElementById('confirmPassword')
            ];
            const allFieldsFilled = requiredFields.every(field => field && field.value.trim() !== '');

            // Vérifier les mots de passe
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const passwordsMatch = password === confirmPassword;

            // Vérifier les conditions - chercher la case à cocher par son nom
            const termsCheckbox = document.querySelector('input[name*="agreeTerms"]');
            const termsAccepted = termsCheckbox ? termsCheckbox.checked : false;

            // Gérer les erreurs de mots de passe
            const confirmPasswordField = document.getElementById('confirmPassword');
            if (confirmPasswordField) {
                const errorDiv = confirmPasswordField.parentElement.querySelector('.password-error');
                if (password && confirmPassword && password !== confirmPassword) {
                    if (!errorDiv) {
                        const error = document.createElement('div');
                        error.className = 'password-error';
                        error.textContent = 'Les mots de passe ne correspondent pas';
                        confirmPasswordField.parentElement.insertBefore(error, confirmPasswordField.nextSibling);
                    }
                } else if (errorDiv) {
                    errorDiv.remove();
                }
            }

            // Activer/désactiver le bouton submit
            const submitButton = document.querySelector('button[type="submit"]');
            if (submitButton) {
                const isValid = allFieldsFilled && passwordsMatch && termsAccepted;
                submitButton.disabled = !isValid;
                submitButton.style.opacity = isValid ? '1' : '0.6';
            }
        }

        // Ajouter des écouteurs sur les champs
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('input').forEach(input => {
                input.addEventListener('input', checkFormValidity);
            });

            // Ajouter un écouteur sur la case à cocher
            const termsCheckbox = document.querySelector('input[name*="agreeTerms"]');
            if (termsCheckbox) {
                termsCheckbox.addEventListener('change', checkFormValidity);
            }

            // Vérifier au chargement de la page
            checkFormValidity();
        });
    </script>
{% endblock %}

{% block body %}
    <header class="header">
        <div class="header-content">
            <div>
                <span class="logo">WAZOBUY</span>
                <span class="tagline">Marketplace & Logistique</span>
            </div>
            <a href="{{ path('app_login') }}" class="login-link">Se connecter</a>
        </div>
    </header>

    <div class="main-container">
        <div class="form-section">
            <h1 class="form-title">Créer un compte</h1>
            
            {{ form_start(registrationForm) }}
                <div class="form-group">
                    {{ form_label(registrationForm.prenom) }}
                    {{ form_errors(registrationForm.prenom) }}
                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-input', 'placeholder': 'Entrez votre prénom'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.nom) }}
                    {{ form_errors(registrationForm.nom) }}
                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-input', 'placeholder': 'Entrez votre nom'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.email) }}
                    {{ form_errors(registrationForm.email) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-input', 'placeholder': 'Entrez votre email'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.plainPassword) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                    <div class="password-container">
                        {{ form_widget(registrationForm.plainPassword, {
                            'attr': {
                                'class': 'form-input',
                                'id': 'password',
                                'placeholder': 'Entrez votre mot de passe'
                            }
                        }) }}
                        <button type="button" class="password-toggle" onclick="togglePassword(this)">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.confirmPassword) }}
                    {{ form_errors(registrationForm.confirmPassword) }}
                    <div class="password-container">
                        {{ form_widget(registrationForm.confirmPassword, {
                            'attr': {
                                'class': 'form-input password-field',
                                'id': 'confirmPassword',
                                'placeholder': 'Confirmez votre mot de passe'
                            }
                        }) }}
                        <button type="button" class="password-toggle" onclick="togglePassword(this)">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="checkbox-container">
                    {{ form_widget(registrationForm.agreeTerms, {
                        'attr': {
                            'class': 'checkbox'
                        }
                    }) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation et la politique de confidentialité', {
                        'label_attr': {
                            'class': 'checkbox-label'
                        }
                    }) }}
                </div>

                {{ form_widget(registrationForm.submit, {
                    'attr': {
                        'class': 'submit-btn'
                    }
                }) }}

            <div class="divider">OU CONTINUER AVEC </div>

            <div class="social-buttons">
                <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google'}) }}" class="social-btn google-btn">
                    <i class="fab fa-google"></i>Google</a>
                <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook'}) }}" class="social-btn facebook-btn">
                    <i class="fab fa-facebook"></i>Facebook</a>
            </div>

            {{ form_end(registrationForm) }}

            <div class="login-prompt">
                Déjà inscrit ? <a href="{{ path('app_login') }}">Se connecter</a>
            </div>
        </div>

        <div class="benefits-section">
            <h2 class="benefits-title">Avantages membres</h2>

            <div class="benefit-item">
                <div class="benefit-icon">
                    <i class="fas fa-truck"></i>
                </div>
                <div class="benefit-content">
                    <h3>Suivi des commandes</h3>
                    <p>Suivez vos commandes en temps réel et recevez des notifications à chaque étape.</p>
                </div>
            </div>

            <div class="benefit-item">
                <div class="benefit-icon">
                    <i class="fas fa-history"></i>
                </div>
                <div class="benefit-content">
                    <h3>Historique d'achats</h3>
                    <p>Consultez facilement l'historique de vos achats et téléchargez vos factures.</p>
                </div>
            </div>

            <div class="benefit-item">
                <div class="benefit-icon">
                    <i class="fas fa-gift"></i>
                </div>
                <div class="benefit-content">
                    <h3>Offres exclusives</h3>
                    <p>Profitez de remises et promotions réservées aux membres de notre plateforme.</p>
                </div>
            </div>

            <div class="benefit-item">
                <div class="benefit-icon">
                    <i class="fas fa-credit-card"></i>
                </div>
                <div class="benefit-content">
                    <h3>Paiement simplifié</h3>
                    <p>Enregistrez vos méthodes de paiement pour des transactions plus rapides.</p>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        © 2025 WAZOBUY. Tous droits réservés.
    </footer>

    <script>
        // Afficher les messages flash
        {% for flashMessage in app.flashes('error') %}
            alert('{{ flashMessage }}');
        {% endfor %}

        {% for flashMessage in app.flashes('success') %}
            alert('{{ flashMessage }}');
        {% endfor %}
    </script>
{% endblock %}