{% extends 'base.html.twig' %}

{% block title %}Commandes - Administration{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" />
    {{ parent() }}
    <style>
        .sticky-header th { position: sticky; top: 0; background: #212529; color: #fff; z-index: 2; }
        .table-responsive { overflow-x: auto; }
        .table-actions .btn { margin-bottom: 2px; }
        @media (max-width: 768px) {
            .table th, .table td { white-space: nowrap; }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Liste des commandes</h1>
    <!-- Barre d'outils -->
    <div class="row g-2 align-items-center mb-3">
        <div class="col-md-4">
            <input id="searchInput" type="text" class="form-control" placeholder="Rechercher (client, email, statut...)" />
        </div>
        <div class="col-md-3">
            <select id="statutFilter" class="form-select">
                <option value="">Tous les statuts</option>
                <option value="en_attente">En attente</option>
                <option value="validée">Validée</option>
                <option value="expédiée">Expédiée</option>
                <option value="annulée">Annulée</option>
            </select>
        </div>
        <div class="col-md-2 text-center">
            <button class="btn btn-outline-secondary w-100" onclick="exportCSV()"><i class="fas fa-file-csv"></i> Exporter</button>
        </div>
        <div class="col-md-3 text-end">
            <a href="#" class="btn btn-success w-100"><i class="fas fa-plus"></i> Ajouter une commande</a>
        </div>
    </div>
    <!-- Tableau -->
    <div class="table-responsive">
        <table id="commandesTable" class="table table-hover align-middle table-bordered table-striped mb-0">
            <thead class="table-dark sticky-header">
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Client</th>
                    <th>Total</th>
                    <th>Statut</th>
                    <th>Mode de paiement</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in commandes %}
                <tr data-statut="{{ commande.statut }}">
                    <td>{{ loop.index }}</td>
                    <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                    <td>
                        {% if commande.client is defined and commande.client is not null %}
                            {{ commande.client.nom }} {{ commande.client.prenom }}<br>
                            <small class="text-muted">{{ commande.client.email }}</small>
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    <td>{{ commande.total|number_format(2, ',', ' ') }} €</td>
                    <td>
                        {% if commande.statut == 'en_attente' %}
                            <span class="badge bg-warning">En attente</span>
                        {% elseif commande.statut == 'validée' %}
                            <span class="badge bg-success">Validée</span>
                        {% elseif commande.statut == 'annulée' %}
                            <span class="badge bg-danger">Annulée</span>
                        {% elseif commande.statut == 'expédiée' %}
                            <span class="badge bg-info">Expédiée</span>
                        {% else %}
                            <span class="badge bg-secondary">{{ commande.statut }}</span>
                        {% endif %}
                    </td>
                    <td>{{ commande.modePaiement }}</td>
                    <td class="table-actions">
                        <a href="{{ path('app_admin_commande_show', {'id': commande.id}) }}" class="btn btn-sm btn-primary" data-bs-toggle="tooltip" title="Voir la commande">
                            <i class="fas fa-eye"></i>
                        </a>
                        {% if commande.statut == 'en_attente' %}
                            <a href="{{ path('app_admin_commande_valider', {'id': commande.id}) }}" class="btn btn-sm btn-success" data-bs-toggle="tooltip" title="Valider" onclick="return confirm('Êtes-vous sûr de vouloir valider cette commande ?')">
                                <i class="fas fa-check"></i>
                            </a>
                            <a href="{{ path('app_admin_commande_annuler', {'id': commande.id}) }}" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" title="Annuler" onclick="return confirm('Êtes-vous sûr de vouloir annuler cette commande ?')">
                                <i class="fas fa-times"></i>
                            </a>
                        {% endif %}
                        <a href="#" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Supprimer" onclick="return confirm('Voulez-vous vraiment supprimer cette commande ?');">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7" class="text-center text-muted">Aucune commande trouvée</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- Pagination statique -->
    <nav aria-label="Pagination" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><a class="page-link" href="#">Précédent</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Suivant</a></li>
        </ul>
    </nav>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>
    // Notification sur le titre si commandes présentes
    document.addEventListener('DOMContentLoaded', function() {
        var nbCommandes = {{ commandes|length }};
        if (nbCommandes > 0) {
            document.title = '(' + nbCommandes + ') ' + document.title;
        }
    });
    // Recherche instantanée et filtre statut
    const searchInput = document.getElementById('searchInput');
    const statutFilter = document.getElementById('statutFilter');
    const table = document.getElementById('commandesTable');
    searchInput.addEventListener('keyup', filterTable);
    statutFilter.addEventListener('change', filterTable);
    function filterTable() {
        const filter = searchInput.value.toLowerCase();
        const statut = statutFilter.value;
        for (let row of table.tBodies[0].rows) {
            let text = row.textContent.toLowerCase();
            let rowStatut = row.getAttribute('data-statut');
            let show = text.includes(filter) && (!statut || rowStatut === statut);
            row.style.display = show ? '' : 'none';
        }
    }
    // Tooltips Bootstrap
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
    // Export CSV
    function exportCSV() {
        let csv = '';
        const rows = table.querySelectorAll('tr');
        for (let row of rows) {
            let cols = Array.from(row.querySelectorAll('th,td')).map(td => '"' + td.innerText.replace(/"/g, '""') + '"');
            csv += cols.join(',') + '\n';
        }
        const blob = new Blob([csv], { type: 'text/csv' });
        const link = document.createElement('a');
        link.href = URL.createObjectURL(blob);
        link.download = 'commandes.csv';
        link.click();
    }
    </script>
{% endblock %}
