{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; }
        .change-password-container {
            max-width: 520px;
            margin: 56px auto 0 auto;
            background: #fff;
            border-radius: 22px;
            box-shadow: 0 8px 32px rgba(102,126,234,0.10);
            padding: 2.8rem 2.2rem 2.2rem 2.2rem;
            animation: fadeInUp 0.7s;
        }
        .change-password-title {
            text-align: center;
            font-size: 2rem;
            font-weight: 700;
            color: #222;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.7rem;
        }
        .change-password-title .icon {
            color: #ffd600;
            font-size: 1.5rem;
        }
        .change-password-form label {
            font-weight: 600;
            color: #667eea;
            margin-bottom: 0.3rem;
        }
        .change-password-form input[type="password"] {
            width: 100%;
            padding: 1.1rem 1.2rem;
            border-radius: 14px;
            border: 1.5px solid #e3e6f0;
            background: #f8f9fb;
            font-size: 1.13rem;
            color: #222;
            margin-bottom: 1.3rem;
            box-shadow: 0 2px 8px rgba(102,126,234,0.04);
        }
        .change-password-btn {
            width: 100%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 1rem 0;
            font-size: 1.15rem;
            font-weight: 700;
            cursor: pointer;
            transition: background 0.2s, box-shadow 0.2s;
            box-shadow: 0 2px 8px rgba(102,126,234,0.10);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.7rem;
            margin-top: 0.7rem;
        }
        .change-password-btn:hover {
            background: linear-gradient(135deg, #764ba2, #667eea);
            box-shadow: 0 4px 16px rgba(102,126,234,0.18);
        }
        .password-requirements {
            font-size: 1.01rem;
            color: #6c757d;
            margin-bottom: 1.2rem;
            text-align: center;
        }
        .alert {
            margin-bottom: 1.2rem;
            font-size: 1.08rem;
            text-align: center;
        }
        .change-password-back {
            text-align: center;
            margin-top: 2rem;
        }
        .change-password-back a {
            color: #667eea;
            text-decoration: underline;
            font-weight: 600;
        }
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
{% endblock %}

{% block body %}
<div class="change-password-container">
    <div class="change-password-title"><span class="icon"><i class="fas fa-key"></i></span> Changer le mot de passe</div>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}
    <div class="password-requirements">
        <strong>Exigences :</strong> Minimum 6 caract√®res, confirmation requise.
    </div>
    <form method="post" class="change-password-form">
        {{ form_start(form) }}
        {{ form_row(form.currentPassword) }}
        {{ form_row(form.newPassword.first) }}
        {{ form_row(form.newPassword.second) }}
        <button type="submit" class="change-password-btn"><span class="icon"><i class="fas fa-key"></i></span> Valider</button>
        {{ form_end(form) }}
    </form>
    <div class="change-password-back">
        <a href="{{ path('app_admin_profile') }}">&larr; Retour au profil</a>
    </div>
</div>
<!-- FontAwesome CDN for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
{% endblock %} 