{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur - Administration{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 d-flex flex-column align-items-center justify-content-center mx-auto" style="min-height: 100vh;">
            <div class="card shadow-lg rounded-4 border-0 p-4 w-100" style="background: linear-gradient(120deg, #f8fafc 0%, #e0e7ef 100%);">
                <div class="card-body text-center">
                    <div class="d-flex flex-column align-items-center mb-4">
                        {% if utilisateur.photoProfil %}
                            <img src="{{ utilisateur.photoProfil }}" alt="Photo de profil" class="rounded-circle shadow" style="width: 110px; height: 110px; object-fit: cover; border: 4px solid #fff;">
                        {% else %}
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center shadow" style="width: 110px; height: 110px; font-size: 2.7rem; font-weight: bold; border: 4px solid #fff;">
                                {{ utilisateur.prenom|first|upper }}{{ utilisateur.nom|first|upper }}
                            </div>
                        {% endif %}
                        <h3 class="mt-3 mb-1">{{ utilisateur.nom }} {{ utilisateur.prenom }}</h3>
                        <div>
                            {% for role in utilisateur.roles %}
                                <span class="badge bg-gradient bg-primary me-1"> <i class="fas fa-user-tag"></i> {{ role|replace({'ROLE_': ''})|capitalize }}</span>
                            {% endfor %}
                        </div>
                    </div>
                    <hr>
                    <div class="row g-3 mb-3 justify-content-center align-items-center text-center">
                        <div class="col-12 col-md-6 d-flex flex-column align-items-center justify-content-center text-center">
                            <p class="mb-2 text-center"><i class="fas fa-envelope me-2 text-primary"></i><strong>Email :</strong> {{ utilisateur.email }}</p>
                            <p class="mb-2 text-center"><i class="fas fa-phone me-2 text-primary"></i><strong>Téléphone :</strong> {{ utilisateur.telephone ? utilisateur.telephone : 'Non défini' }}</p>
                            <p class="mb-2 text-center"><i class="fas fa-calendar-plus me-2 text-primary"></i><strong>Date de création :</strong> {{ utilisateur.dateCreation|date('d/m/Y H:i') }}</p>
                            <p class="mb-2 text-center"><i class="fas fa-calendar-check me-2 text-primary"></i><strong>Dernière connexion :</strong> {{ utilisateur.derniereConnexion ? utilisateur.derniereConnexion|date('d/m/Y H:i') : 'Jamais' }}</p>
                        </div>
                        <div class="col-12 col-md-6 d-flex flex-column align-items-center justify-content-center text-center">
                            <p class="mb-2 text-center"><i class="fas fa-user-shield me-2 text-primary"></i><strong>Statut :</strong>
                                {% if utilisateur.estActif %}
                                    <span class="badge bg-success"><i class="fas fa-check-circle"></i> Actif</span>
                                {% else %}
                                    <span class="badge bg-danger"><i class="fas fa-times-circle"></i> Inactif</span>
                                {% endif %}
                            </p>
                            <p class="mb-2 text-center"><i class="fas fa-file-signature me-2 text-primary"></i><strong>Conditions acceptées :</strong>
                                {% if utilisateur.agreeTerms %}
                                    <span class="badge bg-success"><i class="fas fa-check"></i> Oui</span>
                                {% else %}
                                    <span class="badge bg-danger"><i class="fas fa-times"></i> Non</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-4">
                        <a href="{{ path('app_admin_utilisateurs') }}" class="btn btn-retour-list">
                            <i class="fas fa-arrow-left"></i> Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-retour-list {
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        font-size: 1.2rem;
        font-weight: 500;
        border: none;
        border-radius: 2em;
        box-shadow: 0 2px 8px rgba(102,126,234,0.13);
        padding: 0.8em 2.2em;
        transition: background 0.2s, transform 0.15s, box-shadow 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.7em;
    }
    .btn-retour-list:hover, .btn-retour-list:focus {
        background: linear-gradient(90deg, #764ba2 0%, #667eea 100%);
        color: #fff;
        transform: translateY(-2px) scale(1.04);
        box-shadow: 0 6px 24px rgba(102,126,234,0.18);
        text-decoration: none;
    }
</style>
{% endblock %}
