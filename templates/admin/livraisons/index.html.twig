{% extends 'base.html.twig' %}

{% block title %}Livraisons - Administration{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admindashboard.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12 col-md-8 offset-md-2 text-center">
            <h1 class="mb-3">Liste des livraisons</h1>
            <form class="d-flex flex-wrap justify-content-center gap-2" method="get" action="">
                <input class="form-control me-2" style="max-width:180px;" type="search" name="q" placeholder="Recherche (client, code, ville, livreur...)" aria-label="Rechercher" value="{{ q|default('') }}">
                <select class="form-select me-2" name="statut" style="max-width:140px;">
                    <option value="">Tous statuts</option>
                    <option value="en_attente" {% if statut=='en_attente' %}selected{% endif %}>En attente</option>
                    <option value="validée" {% if statut=='validée' %}selected{% endif %}>Validée</option>
                    <option value="annulée" {% if statut=='annulée' %}selected{% endif %}>Annulée</option>
                    <option value="expédiée" {% if statut=='expédiée' %}selected{% endif %}>Expédiée</option>
                </select>
                <input type="date" class="form-control me-2" name="date_debut" value="{{ dateDebut|default('') }}" style="max-width:140px;">
                <input type="date" class="form-control me-2" name="date_fin" value="{{ dateFin|default('') }}" style="max-width:140px;">
                <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search"></i></button>
                <button class="btn btn-outline-secondary" type="button" onclick="window.location='?'"><i class="fas fa-times"></i></button>
                <button class="btn btn-outline-success" type="button" disabled title="Export bientôt disponible"><i class="fas fa-file-export"></i> Export</button>
            </form>
        </div>
    </div>
    <div class="stats-cards-horizontal mb-4">
        <div class="stat-card-horiz" style="background:#f3f4f6;color:#222;" onclick="window.location='?statut='">
            <div class="stat-icon-horiz" style="background:#e5e7eb;color:#3b3b3b;"><i class="fas fa-list"></i></div>
            <div>
                <div class="fw-bold fs-5">{{ stats.total }}</div>
                <div class="text-muted small">Total</div>
            </div>
        </div>
        <div class="stat-card-horiz" style="background:#fff7e6;color:#b8860b;" onclick="window.location='?statut=en_attente'">
            <div class="stat-icon-horiz" style="background:#ffe8b3;color:#b8860b;"><i class="fas fa-hourglass-half"></i></div>
            <div>
                <div class="fw-bold fs-5">{{ stats.en_attente }}</div>
                <div class="text-muted small">En attente</div>
            </div>
        </div>
        <div class="stat-card-horiz" style="background:#e6f9f0;color:#218838;" onclick="window.location='?statut=validée'">
            <div class="stat-icon-horiz" style="background:#b2f2dd;color:#218838;"><i class="fas fa-check-circle"></i></div>
            <div>
                <div class="fw-bold fs-5">{{ stats.validee }}</div>
                <div class="text-muted small">Validées</div>
            </div>
        </div>
        <div class="stat-card-horiz" style="background:#fbeaea;color:#c82333;" onclick="window.location='?statut=annulée'">
            <div class="stat-icon-horiz" style="background:#f8d7da;color:#c82333;"><i class="fas fa-times-circle"></i></div>
            <div>
                <div class="fw-bold fs-5">{{ stats.annulee }}</div>
                <div class="text-muted small">Annulées</div>
            </div>
        </div>
        <div class="stat-card-horiz" style="background:#e7e9fd;color:#4b4fa7;" onclick="window.location='?statut=expédiée'">
            <div class="stat-icon-horiz" style="background:#d1d5fa;color:#4b4fa7;"><i class="fas fa-truck"></i></div>
            <div>
                <div class="fw-bold fs-5">{{ stats.expediee }}</div>
                <div class="text-muted small">Expédiées</div>
            </div>
        </div>
        <div class="stat-card-horiz" style="background:#f3f4f6;color:#222;">
            <div class="stat-icon-horiz" style="background:#e5e7eb;color:#3b3b3b;"><i class="fas fa-euro-sign"></i></div>
            <div>
                <div class="fw-bold fs-5">{{ stats.chiffre_affaires|number_format(2, ',', ' ') }} FCFA</div>
                <div class="text-muted small">Chiffre d'affaires</div>
            </div>
        </div>
    </div>
    <style>
        body {
            background: linear-gradient(120deg, #f8fafc 0%, #e0e7ef 100%);
        }
        .stat-table th, .stat-table td { vertical-align: middle; font-size: 1.25rem; }
        .stat-table .stat-cell {
            transition: background 0.3s, color 0.3s, transform 0.2s;
            cursor: pointer;
            padding: 1.5em 0.5em !important;
        }
        .stat-table .stat-cell:hover {
            background: #f8f9fa !important;
            color: #212529 !important;
            transform: scale(1.12);
            box-shadow: 0 4px 16px rgba(0,0,0,0.10);
        }
        .stat-table .stat-badge {
            font-size: 2.1rem;
            padding: 1.1em 2.2em;
            border-radius: 2.5em;
            display: inline-flex;
            align-items: center;
            gap: 0.7em;
            font-weight: bold;
        }
        .stat-table th { font-size: 1.3rem; padding-top: 1.2em; padding-bottom: 1.2em; }
        @media (max-width: 768px) {
            .stat-table, .stat-table thead, .stat-table tbody, .stat-table tr, .stat-table th, .stat-table td {
                display: block;
                width: 100%;
            }
            .stat-table thead { display: none; }
            .stat-table tr { margin-bottom: 1.5em; box-shadow: 0 2px 8px rgba(0,0,0,0.07); border-radius: 1.5em; background: #fff; }
            .stat-table .stat-cell { padding: 1.2em 0.5em !important; text-align: center; }
        }
        .modern-card {
            background: #fff;
            border-radius: 1.5em;
            box-shadow: 0 2px 12px rgba(0,0,0,0.07);
            margin-bottom: 1.5em;
            padding: 1.5em 1.2em;
            transition: box-shadow 0.2s, transform 0.2s;
        }
        .modern-card:hover {
            box-shadow: 0 6px 24px rgba(0,0,0,0.13);
            transform: translateY(-4px) scale(1.01);
        }
        .modern-table thead.sticky-top { position: sticky; top: 0; z-index: 2; background: #f8fafc; }
        .modern-table th, .modern-table td { vertical-align: middle; }
        @media (max-width: 900px) {
            .modern-table, .modern-table thead, .modern-table tbody, .modern-table tr, .modern-table th, .modern-table td {
                display: block;
                width: 100%;
            }
            .modern-table thead { display: none; }
            .modern-table tr { margin-bottom: 1.5em; box-shadow: 0 2px 8px rgba(0,0,0,0.07); border-radius: 1.5em; background: #fff; }
            .modern-table td { padding: 1.2em 0.5em !important; text-align: left; border: none; }
            .modern-table td:last-child { border-bottom: none; }
        }
        .stats-cards-horizontal {
            display: flex;
            gap: 1.2rem;
            overflow-x: auto;
            padding-bottom: 0.5rem;
            scrollbar-width: thin;
        }
        .stat-card-horiz {
            display: flex;
            align-items: center;
            gap: 1rem;
            min-width: 200px;
            padding: 1.1rem 1.5rem;
            border-radius: 1.2rem;
            box-shadow: 0 2px 12px rgba(102,126,234,0.08);
            cursor: pointer;
            transition: transform 0.18s, box-shadow 0.18s;
            font-size: 1.1rem;
        }
        .stat-card-horiz:hover {
            transform: translateY(-4px) scale(1.03);
            box-shadow: 0 6px 24px rgba(102,126,234,0.18);
            opacity: 0.95;
        }
        .stat-icon-horiz {
            font-size: 2.1rem;
            width: 2.8rem;
            height: 2.8rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: rgba(255,255,255,0.13);
        }
        @media (max-width: 900px) {
            .stat-card-horiz { min-width: 160px; font-size: 1rem; }
            .stat-icon-horiz { font-size: 1.5rem; width: 2.2rem; height: 2.2rem; }
        }
    </style>
    <div class="table-responsive rounded shadow-sm">
        <table class="table table-hover table-bordered table-striped align-middle mb-0 modern-table">
            <thead class="bg-black text-white">
                <tr>
                    <th>Date</th>
                    <th>Commande</th>
                    <th>Client</th>
                    <th>Adresse</th>
                    <th>Statut</th>
                    <th>Frais</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for livraison in livraisons %}
                <tr>
                    <td><span class="fw-semibold">{{ livraison.dateLivraison|date('d/m/Y H:i') }}</span></td>
                    <td>
                        {% if livraison.commande is defined and livraison.commande is not null %}
                            <span class="badge bg-secondary">#{{ livraison.commande.id }}</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if livraison.commande is defined and livraison.commande is not null and livraison.commande.client is defined and livraison.commande.client is not null %}
                            <div class="d-flex align-items-center gap-2">
                                <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center" style="width:36px;height:36px;font-weight:bold;">
                                    {{ livraison.commande.client.prenom|first|upper }}{{ livraison.commande.client.nom|first|upper }}
                                </div>
                                <div>
                                    <div class="fw-semibold">{{ livraison.commande.client.nom }} {{ livraison.commande.client.prenom }}</div>
                                    <small class="text-muted">{{ livraison.commande.client.email }}</small>
                                </div>
                            </div>
                        {% endif %}
                    </td>
                    <td>
                        <div>{{ livraison.adresseLivraison }}</div>
                        <div><span class="badge bg-light text-dark">{{ livraison.codePostal }}</span> {{ livraison.ville }}</div>
                        <div class="text-muted small">{{ livraison.pays }}</div>
                    </td>
                    <td>
                        {% if livraison.statut == 'en_attente' %}
                            <span class="badge bg-warning text-dark"><i class="fas fa-hourglass-half"></i> En attente</span>
                        {% elseif livraison.statut == 'validée' %}
                            <span class="badge bg-success"><i class="fas fa-check-circle"></i> Validée</span>
                        {% elseif livraison.statut == 'annulée' %}
                            <span class="badge bg-danger"><i class="fas fa-times-circle"></i> Annulée</span>
                        {% elseif livraison.statut == 'expédiée' %}
                            <span class="badge bg-info text-dark"><i class="fas fa-truck"></i> Expédiée</span>
                        {% else %}
                            <span class="badge bg-secondary">{{ livraison.statut }}</span>
                        {% endif %}
                    </td>
                    <td><span class="fw-semibold">{{ livraison.fraisLivraison|number_format(2, ',', ' ') }} €</span></td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_admin_livraison_show', {'id': livraison.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir">
                                <i class="fas fa-eye"></i>
                            </a>
                            {% if livraison.statut == 'en_attente' %}
                                <a href="{{ path('app_admin_livraison_valider', {'id': livraison.id}) }}" class="btn btn-sm btn-outline-success" title="Valider" onclick="return confirm('Êtes-vous sûr de vouloir valider cette livraison ?')">
                                    <i class="fas fa-check"></i>
                                </a>
                                <a href="{{ path('app_admin_livraison_annuler', {'id': livraison.id}) }}" class="btn btn-sm btn-outline-danger" title="Annuler" onclick="return confirm('Êtes-vous sûr de vouloir annuler cette livraison ?')">
                                    <i class="fas fa-times"></i>
                                </a>
                            {% endif %}
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7" class="text-center">Aucune livraison trouvée</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
