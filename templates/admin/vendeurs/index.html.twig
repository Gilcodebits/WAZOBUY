{% extends 'base.html.twig' %}

{% block title %}Vendeurs - Administration{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" />
    {{ parent() }}
    <style>
        .sticky-header th { position: sticky; top: 0; background: #212529; color: #fff; z-index: 2; }
        .avatar {
            width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;
            font-weight: bold; font-size: 1.1rem; border-radius: 50%; background: #0d6efd; color: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }
        .table-responsive { overflow-x: auto; }
        .table-actions .btn { margin-bottom: 2px; }
        @media (max-width: 768px) {
            .table th, .table td { white-space: nowrap; }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Liste des vendeurs</h1>
    <!-- Barre d'outils -->
    <div class="row g-2 align-items-center mb-3">
        <div class="col-md-4">
            <input id="searchInput" type="text" class="form-control" placeholder="Rechercher (nom, email, téléphone...)" />
        </div>
        <div class="col-md-3">
            <select id="statutFilter" class="form-select">
                <option value="">Tous les statuts</option>
                <option value="actif">Actif</option>
                <option value="inactif">Inactif</option>
            </select>
        </div>
        <div class="col-md-2 text-center">
            <button class="btn btn-outline-secondary w-100" onclick="exportCSV()"><i class="fas fa-file-csv"></i> Exporter</button>
        </div>
        <div class="col-md-3 text-end">
            <a href="{{ path('app_admin_vendeur_ajouter') }}" class="btn btn-success w-100"><i class="fas fa-plus"></i> Ajouter un vendeur</a>
        </div>
    </div>
    <!-- Tableau -->
    <div class="table-responsive">
        <table id="vendeursTable" class="table table-hover align-middle table-bordered table-striped mb-0">
            <thead class="table-dark sticky-header">
                <tr>
                    <th>#</th>
                    <th>Avatar</th>
                    <th>Nom complet</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Date d'inscription</th>
                    <th>Statut</th>
                    <th>Produits</th>
                    <th>Dernière connexion</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for vendeur in vendeurs %}
                <tr data-statut="{{ vendeur.estActif ? 'actif' : 'inactif' }}">
                    <td>{{ loop.index }}</td>
                    <td>
                        <div class="avatar" aria-label="Avatar {{ vendeur.prenom }} {{ vendeur.nom }}">
                            {{ vendeur.prenom[0]|upper }}{{ vendeur.nom[0]|upper }}
                        </div>
                    </td>
                    <td>{{ vendeur.prenom }} {{ vendeur.nom }}</td>
                    <td><a href="mailto:{{ vendeur.email }}">{{ vendeur.email }}</a></td>
                    <td>{{ vendeur.telephone ?: '-' }}</td>
                    <td>{{ vendeur.dateCreation ? vendeur.dateCreation|date('d/m/Y') : '-' }}</td>
                    <td>
                        {% if vendeur.estActif %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-secondary">Inactif</span>
                        {% endif %}
                    </td>
                    <td>{{ vendeur.nbProduits is defined ? vendeur.nbProduits : '?' }}</td>
                    <td>{{ vendeur.derniereConnexion ? vendeur.derniereConnexion|date('d/m/Y H:i') : '-' }}</td>
                    <td class="table-actions">
                        <a href="{{ path('app_admin_vendeur_show', {'id': vendeur.id}) }}" class="btn btn-sm btn-primary" data-bs-toggle="tooltip" title="Voir le profil">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="mailto:{{ vendeur.email }}" class="btn btn-sm btn-info" data-bs-toggle="tooltip" title="Contacter">
                            <i class="fas fa-envelope"></i>
                        </a>
                        {% if vendeur.estActif %}
                            <a href="{{ path('app_admin_vendeur_deactivate', {'id': vendeur.id}) }}" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" title="Désactiver">
                                <i class="fas fa-user-slash"></i>
                            </a>
                        {% else %}
                            <a href="{{ path('app_admin_vendeur_activate', {'id': vendeur.id}) }}" class="btn btn-sm btn-success" data-bs-toggle="tooltip" title="Activer">
                                <i class="fas fa-user-check"></i>
                            </a>
                        {% endif %}
                        <a href="#" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Supprimer" onclick="return confirm('Voulez-vous vraiment supprimer ce vendeur ?');">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="10" class="text-center text-muted">Aucun vendeur trouvé</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- Pagination statique -->
    <nav aria-label="Pagination" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><a class="page-link" href="#">Précédent</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Suivant</a></li>
        </ul>
    </nav>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>
    // Recherche instantanée
    const searchInput = document.getElementById('searchInput');
    const statutFilter = document.getElementById('statutFilter');
    const table = document.getElementById('vendeursTable');
    searchInput.addEventListener('keyup', filterTable);
    statutFilter.addEventListener('change', filterTable);
    function filterTable() {
        const filter = searchInput.value.toLowerCase();
        const statut = statutFilter.value;
        for (let row of table.tBodies[0].rows) {
            let text = row.textContent.toLowerCase();
            let rowStatut = row.getAttribute('data-statut');
            let show = text.includes(filter) && (!statut || rowStatut === statut);
            row.style.display = show ? '' : 'none';
        }
    }
    // Tooltips Bootstrap
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
    // Export CSV
    function exportCSV() {
        let csv = '';
        const rows = table.querySelectorAll('tr');
        for (let row of rows) {
            let cols = Array.from(row.querySelectorAll('th,td')).map(td => '"' + td.innerText.replace(/"/g, '""') + '"');
            csv += cols.join(',') + '\n';
        }
        const blob = new Blob([csv], { type: 'text/csv' });
        const link = document.createElement('a');
        link.href = URL.createObjectURL(blob);
        link.download = 'vendeurs.csv';
        link.click();
    }
    </script>
{% endblock %}
