{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit - Wazobuy{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }
        .header {
            background: white;
            padding: 2rem;
            margin: 2rem auto;
            max-width: 1200px;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .header h1 {
            color: #0047AB;
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }
        .header p {
            color: #666;
            font-size: 1.1rem;
            max-width: 600px;
            margin: 0 auto;
        }
        .form-container {
            max-width: 1200px;
            margin: 0 auto 2rem;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .form-section {
            padding: 2rem;
            border-bottom: 1px solid #eee;
        }
        .form-section:last-child {
            border-bottom: none;
        }
        .section-title {
            color: #0047AB;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
        }
        .section-title::before {
            content: '';
            width: 4px;
            height: 30px;
            background: linear-gradient(135deg, #0047AB, #40E0D0);
            margin-right: 1rem;
            border-radius: 2px;
        }
        .form-grid {
            display: grid;
            gap: 1.5rem;
        }
        .form-grid.two-col {
            grid-template-columns: 1fr 1fr;
        }
        .form-group {
            display: flex;
            flex-direction: column;
        }
        .form-group.full-width {
            grid-column: 1 / -1;
        }
        label {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }
        input, select, textarea {
            padding: 1rem;
            border: 2px solid #e1e5e9;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #fafafa;
        }
        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: #40E0D0;
            background: white;
            box-shadow: 0 0 0 3px rgba(64, 224, 208, 0.1);
        }
        textarea {
            resize: vertical;
            min-height: 120px;
        }
        /* Style spécifique pour les champs du formulaire produit */
        .wazobuy-input {
            padding: 1rem;
            border: 2px solid #e1e5e9;
            border-radius: 12px;
            font-size: 1rem;
            background: #fafafa;
            transition: all 0.3s ease;
        }
        .wazobuy-input:focus {
            outline: none;
            border-color: #40E0D0;
            background: white;
            box-shadow: 0 0 0 3px rgba(64, 224, 208, 0.1);
        }
        .action-buttons {
            position: sticky;
            bottom: 0;
            background: white;
            padding: 1.5rem 2rem;
            border-top: 1px solid #eee;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 -5px 20px rgba(0, 0, 0, 0.1);
        }
        .btn {
            padding: 1rem 2rem;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }
        .btn-cancel {
            background: #e1e5e9;
            color: #666;
        }
        .btn-cancel:hover {
            background: #d1d5d9;
            transform: translateY(-2px);
        }
        .btn-save {
            background: linear-gradient(135deg, #0047AB, #40E0D0);
            color: white;
        }
        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 71, 171, 0.3);
        }
        @media (max-width: 768px) {
            .form-grid.two-col {
                grid-template-columns: 1fr;
            }
            .action-buttons {
                flex-direction: column;
                gap: 1rem;
            }
            .header h1 {
                font-size: 2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="header">
    <h1>Ajouter un nouveau produit</h1>
    <p>Créez votre fiche produit en remplissant les informations ci-dessous. Tous les champs marqués d'un astérisque (*) sont obligatoires.</p>
</div>

<!-- Messages flash -->
{% for message in app.flashes('success') %}
    <div style="background: #d4edda; color: #155724; padding: 1rem; margin: 1rem 0; border-radius: 8px; border: 1px solid #c3e6cb;">
        <strong>Succès :</strong> {{ message }}
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div style="background: #f8d7da; color: #721c24; padding: 1rem; margin: 1rem 0; border-radius: 8px; border: 1px solid #f5c6cb;">
        <strong>Erreur :</strong> {{ message }}
    </div>
{% endfor %}

{{ form_start(form, {'attr': {'class': 'form-container', 'enctype': 'multipart/form-data'}}) }}
    <div class="form-section">
        <h2 class="section-title">Informations de base</h2>
        <div class="form-grid two-col">
            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}
            </div>
            <div class="form-group">
                {{ form_label(form.categorie) }}
                {{ form_widget(form.categorie) }}
                {{ form_errors(form.categorie) }}
            </div>
            <div class="form-group full-width">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="form-group">
                {{ form_label(form.prix) }}
                {{ form_widget(form.prix) }}
                {{ form_errors(form.prix) }}
            </div>
            <div class="form-group">
                {{ form_label(form.stock) }}
                {{ form_widget(form.stock) }}
                {{ form_errors(form.stock) }}
            </div>
        </div>
    </div>
    
    <div class="form-section">
        <h2 class="section-title">Promotion</h2>
        <div class="form-grid">
            <div class="form-group">
                <div style="display: flex; align-items: center; gap: 1rem;">
                    {{ form_widget(form.enPromotion) }}
                    {{ form_label(form.enPromotion) }}
                </div>
                {{ form_errors(form.enPromotion) }}
            </div>
            <div class="form-group promotion-field" style="display: none;">
                {{ form_label(form.pourcentagePromotion) }}
                {{ form_widget(form.pourcentagePromotion) }}
                {{ form_errors(form.pourcentagePromotion) }}
                <small style="color: #666; margin-top: 0.5rem; display: block;">
                    Le prix en promotion sera automatiquement calculé
                </small>
            </div>
        </div>
    </div>
    
    <div class="form-section">
        <h2 class="section-title">Images du produit</h2>
        <div class="form-group">
            {{ form_label(form.images) }}
            {{ form_widget(form.images) }}
            {{ form_errors(form.images) }}
        </div>
    </div>
    <div class="action-buttons">
        <a href="{{ path('app_boutique') }}" class="btn btn-cancel">Annuler</a>
        <button type="submit" class="btn btn-save">Publier le produit</button>
    </div>
{{ form_end(form) }}

<script>
    function togglePromotionFields() {
        const promotionCheckbox = document.querySelector('input[name*="enPromotion"]');
        const promotionField = document.querySelector('.promotion-field');
        
        if (promotionCheckbox && promotionCheckbox.checked) {
            promotionField.style.display = 'block';
        } else {
            promotionField.style.display = 'none';
            // Réinitialiser la valeur du pourcentage
            const percentageInput = promotionField.querySelector('input');
            if (percentageInput) {
                percentageInput.value = '';
            }
        }
    }
    
    // Initialiser l'état au chargement de la page
    document.addEventListener('DOMContentLoaded', function() {
        togglePromotionFields();
        
        // Ajouter l'écouteur d'événement sur la checkbox
        const promotionCheckbox = document.querySelector('input[name*="enPromotion"]');
        if (promotionCheckbox) {
            promotionCheckbox.addEventListener('change', togglePromotionFields);
        }
    });
</script>
{% endblock %} 