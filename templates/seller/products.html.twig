{% extends 'base.html.twig' %}

{% block title %}Mes Produits - Dashboard Vendeur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #667eea;
            --secondary-color: #764ba2;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --info-color: #17a2b8;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
            --border-radius: 12px;
            --box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .page-header {
            background: white;
            border-radius: var(--border-radius);
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: var(--box-shadow);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: #6c757d;
            font-size: 1.1rem;
        }

        .btn-add {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: var(--transition);
        }

        .btn-add:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102,126,234,0.15);
        }

        .products-filters {
            background: white;
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: var(--box-shadow);
        }

        .filters-row {
            display: flex;
            gap: 1rem;
            align-items: center;
            flex-wrap: wrap;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .filter-label {
            font-weight: 600;
            color: var(--dark-color);
            font-size: 0.9rem;
        }

        .filter-input, .filter-select {
            padding: 0.75rem 1rem;
            border: 1px solid #e3e6f0;
            border-radius: 8px;
            font-size: 0.9rem;
            transition: var(--transition);
        }

        .filter-input:focus, .filter-select:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(102,126,234,0.1);
        }

        .btn-filter {
            background: var(--primary-color);
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
        }

        .btn-filter:hover {
            background: var(--secondary-color);
            transform: translateY(-1px);
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .product-card {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            overflow: hidden;
            transition: var(--transition);
            position: relative;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.15);
        }

        .product-image {
            width: 100%;
            height: 200px;
            background-size: cover;
            background-position: center;
            position: relative;
            overflow: hidden;
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        .product-badges {
            position: absolute;
            top: 10px;
            left: 10px;
            display: flex;
            gap: 0.5rem;
        }

        .badge {
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .badge.new { background: var(--success-color); color: white; }
        .badge.sale { background: var(--warning-color); color: black; }
        .badge.promotion { background: var(--danger-color); color: white; font-weight: bold; }
        .badge.out-of-stock { background: var(--danger-color); color: white; }

        .product-actions {
            position: absolute;
            top: 10px;
            right: 10px;
            display: flex;
            gap: 0.5rem;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .product-card:hover .product-actions {
            opacity: 1;
        }

        .action-btn {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: white;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            transition: var(--transition);
        }

        .action-btn:hover {
            transform: scale(1.1);
        }

        .action-btn.edit { color: var(--warning-color); }
        .action-btn.delete { color: var(--danger-color); }
        .action-btn.view { color: var(--info-color); }

        .product-info {
            padding: 1.5rem;
        }

        .product-name {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
            line-height: 1.4;
        }

        .product-category {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 0.75rem;
        }

        .product-price {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--dark-color);
            margin: 1rem 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .price-promo {
            color: var(--danger-color);
            font-weight: 700;
        }

        .price-original {
            color: #6c757d;
            text-decoration: line-through;
            font-size: 1rem;
            font-weight: 500;
        }

        .price-normal {
            color: var(--dark-color);
            font-weight: 700;
        }

        .currency {
            font-size: 0.8em;
            font-weight: 500;
            opacity: 0.8;
            margin-left: 0.2rem;
        }

        .product-stock {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .stock-indicator {
            width: 8px;
            height: 8px;
            border-radius: 50%;
        }

        .stock-indicator.in-stock { background: var(--success-color); }
        .stock-indicator.low-stock { background: var(--warning-color); }
        .stock-indicator.out-of-stock { background: var(--danger-color); }

        .stock-text {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .product-stats {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid #f3f4f6;
        }

        .stat {
            text-align: center;
        }

        .stat-value {
            font-weight: 600;
            color: var(--dark-color);
        }

        .stat-label {
            font-size: 0.8rem;
            color: #6c757d;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
            color: var(--primary-color);
        }

        .empty-state h3 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: var(--dark-color);
        }

        .empty-state p {
            color: #6c757d;
            margin-bottom: 2rem;
        }

        .product-condition-label {
            display: inline-block;
            font-size: 0.7em;
            padding: 0.05em 0.18em;
            border-radius: 12px;
            color: #00b388;
            background: #e8f5e8;
            font-weight: 600;
            margin-top: 0.05em;
            margin-bottom: 0.05em;
            width: auto;
            min-width: 0;
            max-width: none;
            white-space: nowrap;
            box-sizing: border-box;
            text-align: center;
            float: none;
            align-self: flex-start;
        }

        @media (max-width: 768px) {
            .page-header {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }
            
            .filters-row {
                flex-direction: column;
                align-items: stretch;
            }
            
            .products-grid {
                display: flex;
                flex-wrap: wrap;
                gap: 0.5rem;
                margin-bottom: 0.7rem;
                justify-content: space-between;
            }
            .product-card {
                width: 48%;
                background: #fff;
                border-radius: 4px;
                box-shadow: 0 2px 6px rgba(0,0,0,0.05);
                margin-bottom: 0.5rem;
                overflow: hidden;
                display: flex;
                flex-direction: column;
                position: relative;
                min-height: 150px;
                max-height: 210px;
            }
            .product-card .product-image,
            .product-card .product-image img {
                border-radius: 0;
                object-fit: cover;
                width: 100%;
                height: 80px;
                min-height: 80px;
                max-height: 90px;
                display: block;
                background: #fff;
            }
            .product-badges {
                position: absolute;
                top: 6px;
                left: 6px;
                background: none;
                gap: 0.06em;
                display: flex;
                flex-wrap: wrap;
            }
            .badge {
                background: #fff;
                color: #222;
                font-size: 0.62em;
                font-weight: 600;
                border-radius: 4px;
                padding: 0.07em 0.32em;
                box-shadow: 0 1px 4px rgba(0,0,0,0.07);
                z-index: 2;
                margin-right: 0.06em;
                margin-bottom: 0.06em;
            }
            .product-info {
                padding: 0.3em 0.4em 0.4em 0.4em;
                display: flex;
                flex-direction: column;
                gap: 0.08em;
            }
            .product-name {
                font-size: 0.82em;
                font-weight: 400;
                margin-bottom: 0.04em;
                color: #222;
                line-height: 1.1;
            }
            .product-price {
                font-size: 0.9em;
                font-weight: bold;
                color: #222;
                margin-bottom: 0.04em;
                line-height: 1.1;
            }
            .product-desc {
                font-size: 0.7em;
                color: #666;
                margin-bottom: 0.07em;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                line-height: 1.1;
                font-weight: 400;
            }
            .product-condition-label {
                display: inline-block !important;
                font-size: 0.7em !important;
                padding: 0.05em 0.18em !important;
                border-radius: 12px !important;
                color: #00b388 !important;
                background: #e8f5e8 !important;
                font-weight: 600 !important;
                margin-top: 0.05em !important;
                margin-bottom: 0.05em !important;
                width: auto !important;
                min-width: 0 !important;
                max-width: none !important;
                white-space: nowrap !important;
                box-sizing: border-box !important;
                text-align: center !important;
                float: none !important;
                align-self: flex-start !important;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <!-- Page Header -->
    <div class="page-header">
        <div>
            <h1 class="page-title">Mes Produits</h1>
            <p class="page-subtitle">Gérez votre catalogue de produits</p>
        </div>
        <a href="{{ path('seller_product_add') }}" class="btn-add">
            <i class="fas fa-plus"></i> Publuer un produit
        </a>
    </div>

    <!-- Filters -->
    <div class="products-filters">
        <div class="filters-row">
            <div class="filter-group">
                <label class="filter-label">Catégorie</label>
                <select class="filter-select">
                    <option value="">Toutes les catégories</option>
                    <option value="electronique">Électronique</option>
                    <option value="mode">Mode</option>
                    <option value="maison">Maison</option>
                    <option value="beaute">Beauté</option>
                    <option value="sport">Sport</option>
                    <option value="alimentation">Alimentation</option>
                    <option value="laitier">Laitier</option>
                </select>
            </div>
            
            <div class="filter-group">
                <label class="filter-label">Statut</label>
                <select class="filter-select">
                    <option value="">Tous les statuts</option>
                    <option value="active">Actif</option>
                    <option value="inactive">Inactif</option>
                    <option value="out-of-stock">Rupture de stock</option>
                </select>
            </div>
            
            <div class="filter-group">
                <label class="filter-label">Recherche</label>
                <input type="text" class="filter-input" placeholder="Nom du produit...">
            </div>
            
            <div class="filter-group">
                <label class="filter-label">&nbsp;</label>
                <button class="btn-filter">Filtrer</button>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    {% if produits|length > 0 %}
        <div class="products-grid">
            {% for produit in produits %}
                <div class="product-card" onclick="window.location.href='{{ path('seller_product_edit', {'id': produit.id}) }}'" style="cursor:pointer;">
                    <div class="product-badges">
                        {% if produit.condition == 'occasion' %}
                            <span class="badge">Used</span>
                        {% elseif produit.condition == 'neuf' %}
                            <span class="badge">New</span>
                        {% endif %}
                        {% if produit.nouveau %}
                            <span class="badge new">Nouveau</span>
                        {% endif %}
                        {% if produit.promotion %}
                            <span class="badge promotion">Promo</span>
                        {% endif %}
                    </div>
                    <div class="product-actions">
                        <button class="action-btn edit" onclick="event.stopPropagation(); window.location.href='{{ path('seller_product_edit', {'id': produit.id}) }}'">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn delete" onclick="event.stopPropagation(); deleteProduct({{ produit.id }}, '{{ produit.nom }}')">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    <div class="product-image">
                        <img src="{% if produit.image and image_exists('uploads/products/' ~ produit.image) %}{{ asset('uploads/products/' ~ produit.image) }}{% else %}{{ asset('images/product-placeholder.jpg') }}{% endif %}" alt="{{ produit.nom }}">
                    </div>
                    <div class="product-info">
                        <div class="product-price" style="font-weight:bold;">
                            {% if produit.promotion and produit.pourcentagePromotion %}
                                <span style="text-decoration:line-through; color:#888; font-size:0.8em;">
                                    {{ produit.prix|number_format(0, '.', ' ') }} FCFA
                                </span>
                                <span style="color:#e63946; font-weight:bold;">
                                    {{ (produit.prix * (1 - produit.pourcentagePromotion/100))|number_format(0, '.', ' ') }} FCFA
                                </span>
                            {% else %}
                                {{ produit.prix|number_format(0, '.', ' ') }} FCFA
                            {% endif %}
                        </div>
                        <div class="product-name">{{ produit.nom }}</div>
                        <div class="product-desc">{{ produit.description|striptags|slice(0, 40) }}{% if produit.description|length > 40 %}...{% endif %}</div>
                        {% if produit.condition == 'neuf' or produit.condition == 'occasion' %}
                            <div class="product-condition-label" style="margin-top:0.2em; font-size:0.85em; color:#0072ce; font-weight:600; text-align:left;">
                                {{ produit.condition == 'neuf' ? 'Neuf' : 'Occasion' }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <i class="fas fa-box-open"></i>
            <h3>Aucun produit trouvé</h3>
            <p>Commencez par ajouter votre premier produit pour développer votre activité.</p>
            <a href="{{ path('seller_product_add') }}" class="btn-add">
                <i class="fas fa-plus"></i> Ajouter mon premier produit
            </a>
        </div>
    {% endif %}
</div>

<script>
    // Filtres interactifs
    document.querySelector('.btn-filter').addEventListener('click', function() {
        console.log('Filtrage des produits...');
        // Logique de filtrage à implémenter
    });

    // Actions sur les produits
    document.querySelectorAll('.action-btn.view').forEach(btn => {
        btn.addEventListener('click', function() {
            const card = this.closest('.product-card');
            const productName = card.querySelector('.product-name').textContent;
            console.log('Voir les détails du produit:', productName);
            // Rediriger vers la page de détails
        });
    });

    document.querySelectorAll('.action-btn.edit').forEach(btn => {
        btn.addEventListener('click', function() {
            const card = this.closest('.product-card');
            const productName = card.querySelector('.product-name').textContent;
            console.log('Modifier le produit:', productName);
            // Rediriger vers la page de modification
        });
    });

    document.querySelectorAll('.action-btn.delete').forEach(btn => {
        btn.addEventListener('click', function() {
            const card = this.closest('.product-card');
            const productName = card.querySelector('.product-name').textContent;
            
            if (confirm(`Êtes-vous sûr de vouloir supprimer "${productName}" ?`)) {
                console.log('Supprimer le produit:', productName);
                // Logique de suppression à implémenter
            }
        });
    });
</script>
{% endblock %} 