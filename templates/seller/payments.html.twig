{% extends 'base.html.twig' %}

{% block title %}Mes Paiements{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #667eea;
            --secondary-color: #764ba2;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --info-color: #17a2b8;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
            --border-radius: 12px;
            --box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            --transition: all 0.3s ease;
        }
        body { font-family: 'Inter', sans-serif; background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); min-height: 100vh; }
        .dashboard { display: flex; min-height: 100vh; }
        .sidebar { width: 260px; background: linear-gradient(180deg, var(--primary-color), var(--secondary-color)); color: #fff; padding: 2rem 0; position: fixed; height: 100vh; z-index: 1000; }
        .sidebar .logo { display: flex; align-items: center; justify-content: center; margin-bottom: 2rem; }
        .logo-text { font-size: 1.8rem; font-weight: 700; color: #fff; text-decoration: none; }
        .sidebar nav { padding: 0 1rem; }
        .nav-item { display: flex; align-items: center; padding: 1rem 1.5rem; color: rgba(255,255,255,0.8); text-decoration: none; border-radius: var(--border-radius); margin-bottom: 0.5rem; font-weight: 500; transition: var(--transition); }
        .nav-item:hover, .nav-item.active { background: rgba(255,255,255,0.15); color: #fff; transform: translateX(5px); }
        .nav-item-icon { margin-right: 1rem; font-size: 1.2rem; width: 24px; text-align: center; }
        .main-content { flex: 1; margin-left: 260px; padding: 2rem; }
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; padding: 1.5rem 2rem; background: #fff; border-radius: var(--border-radius); box-shadow: var(--box-shadow); }
        .page-title { font-size: 2rem; font-weight: 700; color: var(--dark-color); }
        .header-actions { display: flex; gap: 1rem; }
        .btn-primary { background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); color: #fff; padding: 0.75rem 1.5rem; border-radius: 25px; font-weight: 600; border: none; text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem; transition: var(--transition); }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(102,126,234,0.4); color: #fff; text-decoration: none; }
        .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 1.5rem; margin-bottom: 2rem; }
        .stat-card { background: #fff; border-radius: var(--border-radius); padding: 2rem; box-shadow: var(--box-shadow); position: relative; overflow: hidden; }
        .stat-card::before { content: ''; position: absolute; top: 0; left: 0; right: 0; height: 4px; background: linear-gradient(90deg, var(--primary-color), var(--secondary-color)); }
        .stat-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem; }
        .stat-icon { width: 48px; height: 48px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; color: #fff; }
        .stat-icon.revenue { background: linear-gradient(135deg, #667eea, #764ba2); }
        .stat-icon.pending { background: linear-gradient(135deg, #ffc107, #fd7e14); }
        .stat-icon.completed { background: linear-gradient(135deg, #28a745, #20c997); }
        .stat-icon.failed { background: linear-gradient(135deg, #dc3545, #e74c3c); }
        .stat-value { font-size: 2.1rem; font-weight: 700; color: var(--dark-color); margin-bottom: 0.5rem; }
        .stat-label { font-size: 1rem; color: #6c757d; margin-bottom: 1rem; font-weight: 500; }
        .stat-change { display: flex; align-items: center; gap: 0.5rem; font-size: 0.9rem; font-weight: 500; }
        .stat-change.positive { color: var(--success-color); }
        .stat-change.negative { color: var(--danger-color); }
        .table-card { background: #fff; border-radius: var(--border-radius); box-shadow: var(--box-shadow); overflow: hidden; margin-bottom: 2rem; }
        .table-header { display: flex; justify-content: space-between; align-items: center; padding: 2rem; border-bottom: 1px solid #e3e6f0; }
        .table-title { font-size: 1.25rem; font-weight: 600; color: var(--dark-color); }
        .view-all-btn { color: var(--primary-color); text-decoration: none; font-weight: 500; transition: var(--transition); }
        .view-all-btn:hover { color: var(--secondary-color); text-decoration: none; }
        .table-responsive { overflow-x: auto; }
        .table { width: 100%; border-collapse: collapse; }
        .table th { background: #f8f9fa; padding: 1rem; text-align: left; font-weight: 600; color: var(--dark-color); border-bottom: 1px solid #e3e6f0; }
        .table td { padding: 1rem; border-bottom: 1px solid #e3e6f0; vertical-align: middle; }
        .table tbody tr:hover { background: #f8f9fa; }
        .status-badge { padding: 0.5rem 1rem; border-radius: 25px; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; }
        .status-badge.completed { background: rgba(40, 167, 69, 0.1); color: var(--success-color); }
        .status-badge.pending { background: rgba(255, 193, 7, 0.1); color: var(--warning-color); }
        .status-badge.failed { background: rgba(220, 53, 69, 0.1); color: var(--danger-color); }
        .status-badge.processing { background: rgba(23, 162, 184, 0.1); color: var(--info-color); }
        .filters-bar { display: flex; gap: 1rem; margin-bottom: 1.5rem; align-items: center; }
        .filters-bar input, .filters-bar select { padding: 0.5rem 1rem; border-radius: 6px; border: 1px solid #e3e6f0; font-size: 1rem; }
        @media (max-width: 900px) { .sidebar { transform: translateX(-100%); } .main-content { margin-left: 0; } .stats-grid { grid-template-columns: 1fr; } }
    </style>
{% endblock %}

{% block body %}
<div class="dashboard">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="logo">
            <a href="#" class="logo-text">WAZOBUY</a>
        </div>
        <nav>
            <a href="{{ path('app_seller_dashboard') }}" class="nav-item"><i class="fas fa-tachometer-alt nav-item-icon"></i> Tableau de bord</a>
            <a href="{{ path('app_seller_products') }}" class="nav-item"><i class="fas fa-box-open nav-item-icon"></i> Produits</a>
            <a href="{{ path('app_seller_orders') }}" class="nav-item"><i class="fas fa-shopping-cart nav-item-icon"></i> Commandes</a>
            <a href="{{ path('app_seller_payments') }}" class="nav-item active"><i class="fas fa-wallet nav-item-icon"></i> Paiements</a>
            <a href="{{ path('app_seller_reports') }}" class="nav-item"><i class="fas fa-chart-line nav-item-icon"></i> Rapports</a>
            <a href="{{ path('app_seller_settings') }}" class="nav-item"><i class="fas fa-cog nav-item-icon"></i> Paramètres</a>
        </nav>
    </aside>
    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="header">
            <h1 class="page-title">Mes Paiements</h1>
            <div class="header-actions">
                <a href="#" class="btn-primary"><i class="fas fa-download"></i> Exporter</a>
            </div>
        </header>
        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card"><div class="stat-header"><div class="stat-icon revenue"><i class="fas fa-money-bill-wave"></i></div></div><div class="stat-value">{{ format_price(totalRevenus)|raw }}</div><div class="stat-label">Revenus totaux</div><div class="stat-change positive"><i class="fas fa-arrow-up"></i> +15% ce mois</div></div>
            <div class="stat-card"><div class="stat-header"><div class="stat-icon pending"><i class="fas fa-clock"></i></div></div><div class="stat-value">{{ format_price(paiementsEnAttente)|raw }}</div><div class="stat-label">Paiements en attente</div><div class="stat-change positive"><i class="fas fa-arrow-up"></i> 3 nouveaux</div></div>
            <div class="stat-card"><div class="stat-header"><div class="stat-icon completed"><i class="fas fa-check-circle"></i></div></div><div class="stat-value">{{ format_price(paiementsCompletes)|raw }}</div><div class="stat-label">Paiements complétés</div><div class="stat-change positive"><i class="fas fa-arrow-up"></i> Ce mois</div></div>
            <div class="stat-card"><div class="stat-header"><div class="stat-icon failed"><i class="fas fa-times-circle"></i></div></div><div class="stat-value">{{ format_price(paiementsEchoues)|raw }}</div><div class="stat-label">Paiements échoués</div><div class="stat-change negative"><i class="fas fa-arrow-down"></i> -2% ce mois</div></div>
        </div>
        <!-- Filtres et recherche -->
        <form class="filters-bar" method="get">
            <input type="text" name="search" placeholder="Rechercher un paiement..." value="{{ app.request.get('search') }}">
            <select name="statut">
                <option value="">Tous les statuts</option>
                <option value="completed" {% if app.request.get('statut') == 'completed' %}selected{% endif %}>Complété</option>
                <option value="pending" {% if app.request.get('statut') == 'pending' %}selected{% endif %}>En attente</option>
                <option value="failed" {% if app.request.get('statut') == 'failed' %}selected{% endif %}>Échoué</option>
            </select>
            <input type="date" name="date_debut" value="{{ app.request.get('date_debut') }}">
            <input type="date" name="date_fin" value="{{ app.request.get('date_fin') }}">
            <button type="submit" class="btn-primary"><i class="fas fa-filter"></i> Filtrer</button>
        </form>
        <!-- Paiements Table -->
        <div class="table-card">
            <div class="table-header">
                <h3 class="table-title">Historique des paiements</h3>
                <a href="#" class="view-all-btn">Voir tous les paiements</a>
            </div>
            <div class="table-responsive">
                {% if paiements|length > 0 %}
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID Paiement</th>
                                <th>Commande</th>
                                <th>Montant</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th>Méthode</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for paiement in paiements %}
                                <tr>
                                    <td><strong>#{{ paiement.id }}</strong></td>
                                    <td>Commande #{{ paiement.commande.id }}</td>
                                    <td>{{ format_price(paiement.montant)|raw }}</td>
                                    <td>{{ paiement.datePaiement|date('d/m/Y H:i') }}</td>
                                    <td><span class="status-badge {{ paiement.statut|lower }}">{{ paiement.statut }}</span></td>
                                    <td>{{ paiement.methodePaiement }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div style="text-align: center; padding: 3rem; color: #6c757d;">
                        <i class="fas fa-wallet" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.5;"></i>
                        <h4>Aucun paiement trouvé</h4>
                        <p>Vous n'avez pas encore reçu de paiements.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </main>
</div>
{% endblock %}
