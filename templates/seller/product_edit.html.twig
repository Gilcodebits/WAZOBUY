{% extends 'base.html.twig' %}

{% block title %}Modifier le produit{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #667eea;
            --secondary-color: #764ba2;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --info-color: #17a2b8;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
            --border-radius: 12px;
            --box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        .container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
        }

        .page-header {
            background: white;
            border-radius: var(--border-radius);
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: var(--box-shadow);
            text-align: center;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: #6c757d;
            font-size: 1.1rem;
        }

        .form-container {
            background: white;
            border-radius: var(--border-radius);
            padding: 2rem;
            box-shadow: var(--box-shadow);
        }

        .current-image {
            text-align: center;
            margin-bottom: 2rem;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: var(--border-radius);
        }

        .current-image img {
            max-width: 200px;
            max-height: 200px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e3e6f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: var(--transition);
            background: white;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(102,126,234,0.1);
        }

        .form-input[type="file"] {
            padding: 0.5rem;
            border: 2px dashed #e3e6f0;
            background: #f8f9fa;
            cursor: pointer;
        }

        .form-input[type="file"]:hover {
            border-color: var(--primary-color);
            background: #f0f2ff;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .checkbox-group input[type="checkbox"] {
            width: 18px;
            height: 18px;
            accent-color: var(--primary-color);
        }

        .checkbox-group label {
            margin-bottom: 0;
            cursor: pointer;
        }

        .btn-save {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 0.75rem 2rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: var(--transition);
            width: 100%;
            margin-top: 1rem;
        }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102,126,234,0.15);
        }

        .btn-cancel {
            background: #6c757d;
            color: white;
            padding: 0.75rem 2rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
            display: inline-block;
            margin-top: 1rem;
            text-align: center;
        }

        .btn-cancel:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .form-actions .btn-save {
            flex: 2;
        }

        .form-actions .btn-cancel {
            flex: 1;
        }

        .error-message {
            color: var(--danger-color);
            font-size: 0.9rem;
            margin-top: 0.25rem;
        }

        @media (max-width: 768px) {
            .container {
                padding: 1rem;
                margin: 1rem auto;
            }
            
            .form-actions {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1 class="page-title">Modifier le produit</h1>
        <p class="page-subtitle">Mettez à jour les informations de votre produit</p>
    </div>

    <div class="form-container">
        {% if produit.image %}
            <div class="current-image">
                <img src="/uploads/products/{{ produit.image }}" alt="Image actuelle du produit">
                <p style="margin-top: 0.5rem; color: #6c757d; font-size: 0.9rem;">Image actuelle</p>
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            {{ form_errors(form) }}
            
            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-input', 'placeholder': 'Nom du produit'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-input', 'placeholder': 'Description détaillée du produit', 'rows': '4'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="form-group">
                {{ form_label(form.prix) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-input', 'placeholder': 'Prix en FCFA'}}) }}
                {{ form_errors(form.prix) }}
            </div>

            <div class="form-group">
                {{ form_label(form.stock) }}
                {{ form_widget(form.stock, {'attr': {'class': 'form-input', 'placeholder': 'Quantité en stock'}}) }}
                {{ form_errors(form.stock) }}
            </div>

            <div class="form-group">
                {{ form_label(form.condition) }}
                {{ form_widget(form.condition, {'attr': {'class': 'form-input'}}) }}
                {{ form_errors(form.condition) }}
            </div>

            <div class="form-group">
                <div class="checkbox-group">
                    {{ form_widget(form.promotion) }}
                    {{ form_label(form.promotion) }}
                </div>
                {{ form_errors(form.promotion) }}
            </div>

            <div class="form-group">
                {{ form_label(form.pourcentagePromotion) }}
                {{ form_widget(form.pourcentagePromotion, {'attr': {'class': 'form-input', 'placeholder': 'Pourcentage de réduction'}}) }}
                {{ form_errors(form.pourcentagePromotion) }}
            </div>

            <div class="form-group">
                {{ form_label(form.categorie) }}
                {{ form_widget(form.categorie, {'attr': {'class': 'form-input'}}) }}
                {{ form_errors(form.categorie) }}
            </div>

            <div class="form-group">
                {{ form_label(form.images) }}
                {{ form_widget(form.images, {'attr': {'class': 'form-input'}}) }}
                {{ form_errors(form.images) }}
                <small style="color: #6c757d; font-size: 0.85rem;">Laissez vide pour conserver l'image actuelle</small>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-save">
                    <i class="fas fa-save"></i> Enregistrer les modifications
                </button>
                <a href="{{ path('app_seller_products') }}" class="btn-cancel">
                    <i class="fas fa-times"></i> Annuler
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %} 