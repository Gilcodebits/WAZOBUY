<div class="header-actions">
    <div class="notification-badge" title="Notifications"><i class="fas fa-bell"></i></div>
    <div class="notification-badge" title="Messages"><i class="fas fa-envelope"></i></div>
    <div class="user-info user-menu-container">
        <span style="font-weight: 600;">Super Admin</span>
        <div class="user-avatar" onclick="toggleUserMenu()">SA</div>
        <div class="user-menu" id="userMenu">
            <a href="#" class="user-menu-item"><i class="fas fa-user"></i> Profil</a>
            <a href="#" class="user-menu-item"><i class="fas fa-cog"></i> Paramètres</a>
            <a href="{{ path('_security_logout') }}" class="user-menu-item"><i class="fas fa-sign-out-alt"></i> Déconnexion</a>
        </div>
    </div>
</div>

<tbody>
    {% for activite in activitesRecentes %}
    <tr>
        <td>{{ activite.action }}</td>
        <td>{{ activite.utilisateur }}</td>
        <td>{{ activite.date|date('d/m/Y H:i') }}</td>
        <td><span class="status-badge {{ activite.statut|lower }}">{{ activite.statut|capitalize }}</span></td>
    </tr>
    {% else %}
    <tr>
        <td colspan="4" class="text-center">Aucune activité récente</td>
    </tr>
    {% endfor %}
</tbody> 